{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "zuruuh/hateoas",
  "description": "A PHP library to support implementing representations for HATEOAS REST web services",
  "license": "MIT",
  "authors": [
    {
      "name": "William Durand",
      "email": "william.durand1@gmail.com"
    },
    {
      "name": "Adrien Brault",
      "email": "adrien.brault@gmail.com"
    },
    {
      "name": "Asmir Mustafic",
      "email": "goetas@gmail.com"
    },
    {
      "name": "Zuruuh",
      "homepage": "https://github.com/Zuruuh"
    }
  ],
  "require": {
    "php": ">=8.1",
    "doctrine/annotations": "^2.0",
    "jms/metadata": "^2.0",
    "jms/serializer": "^3.0",
    "psr/simple-cache": "^3.0",
    "symfony/expression-language": "^4.0|^5.0|^6.0|^7.0",
    "symfony/serializer": "^4.0|^5.0|^6.0|^7.0"
  },
  "require-dev": {
    "doctrine/persistence": "^1.3.4 | ^2.0 | ^3.0",
    "friendsofphp/php-cs-fixer": "^3.23",
    "pagerfanta/core": "^2.4 || ^3.0",
    "phpdocumentor/type-resolver": "^1.5.1",
    "phpspec/prophecy": "^1.16",
    "phpspec/prophecy-phpunit": "^2.0.1",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-symfony": "^1.3",
    "phpunit/phpunit": "^7 | ^9.5.10",
    "symfony/cache": ">=3.0",
    "symfony/routing": ">=3.0",
    "symfony/yaml": ">=3.0",
    "twig/twig": "^3.0"
  },
  "suggest": {
    "symfony/yaml": "To use yaml based configuration.",
    "symfony/routing": "To use the SymfonyRouteFactory.",
    "twig/twig": "To use the Twig extensions."
  },
  "autoload": {
    "psr-4": {
      "Zuruuh\\Hateoas\\": "src/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
